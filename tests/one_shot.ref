1 subgoal
  
  Σ : gFunctors
  heapG0 : heapG Σ
  one_shotG0 : one_shotG Σ
  Φ : val → iProp Σ
  N : namespace
  l : loc
  γ : gname
  m, m' : Z
  ============================
  "HN" : inv N (one_shot_inv γ l)
  "Hγ'" : own γ (Shot m)
  --------------------------------------□
  "Hl" : l ↦ InjRV #m'
  "Hγ" : own γ (Shot m')
  --------------------------------------∗
  |={⊤ ∖ ↑N}=> ▷ one_shot_inv γ l
               ∗ WP match: InjR #m' with
                      InjL <> => assert: #false
                    | InjR "m" => assert: #m = "m"
                    end {{ _, True }}
  
